{
	"compilerOptions": {
		"alwaysStrict": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "./dist/",

		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"sourceMap": true,
		"strictNullChecks": true
	},
	"exclude": [
		"**/node_modules",
		"./dist/**"
	],
}